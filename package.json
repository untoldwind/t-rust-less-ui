{
    "name": "t-rust-less-ui",
    "version": "0.2.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build:app": "webpack --config webpack.config.js --mode production",
        "build:app-dev": "webpack --config webpack.config.js --mode development",
        "dev": "tauri dev --release",
        "dev:app": "webpack serve --config webpack.config.js --mode development",
        "format": "tsfmt -r && scssfmt --recursive sass/**/*.scss && tslint -c tslint.json --project .",
        "clean": "rimraf dist app src-tauri/target",
        "dist": "tauri build"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@tauri-apps/cli": "^1.0.0-beta.9",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/mousetrap": "^1.6.3",
        "@types/qrcode.react": "^1.0.2",
        "@types/react": "^17.0.19",
        "@types/react-dom": "^17.0.9",
        "@webpack-cli/serve": "^1.5.2",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^6.2.0",
        "extract-loader": "^5.1.0",
        "file-loader": "^6.0.0",
        "mini-css-extract-plugin": "^2.2.0",
        "sass": "^1.38.0",
        "sass-bem": "^2.6.5",
        "sass-loader": "^12.1.0",
        "scssfmt": "^1.0.7",
        "ts-loader": "^9.2.5",
        "tslint": "^6.1.2",
        "typescript": "^4.3.5",
        "typescript-formatter": "^7.2.2",
        "webpack": "^5.51.0",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.0.0"
    },
    "dependencies": {
        "@blueprintjs/core": "^3.47.0",
        "@blueprintjs/icons": "^3.22.0",
        "@blueprintjs/popover2": "^0.11.1",
        "@blueprintjs/select": "^3.16.6",
        "@emotion/css": "^11.1.3",
        "@tauri-apps/api": "^1.0.0-beta.6",
        "@xstate/react": "^1.5.1",
        "decko": "^1.2.0",
        "moment": "^2.27.0",
        "process": "^0.11.10",
        "qrcode.react": "^1.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "xstate": "^4.23.1"
    },
    "build": {
        "win": {
            "icon": "resources/t-rust-less.png",
            "asar": true,
            "asarUnpack": [
                "*.node",
                "*.dll"
            ],
            "publisherName": "t-rust-less"
        },
        "linux": {},
        "nsis": {
            "artifactName": "t-rust-less-ui-setup.exe"
        },
        "appImage": {
            "artifactName": "t-rust-less-ui.AppImage"
        }
    },
    "resolutions": {
        "**/trim-newlines": "4.0.2",
        "**/glob-parent": "6.0.1",
        "**/url-parse": "1.5.3"
    }
}

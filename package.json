{
    "name": "t-rust-less-ui",
    "version": "0.2.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build:app": "webpack --config webpack.config.js --mode production",
        "build:app-dev": "webpack --config webpack.config.js --mode development",
        "dev": "webpack serve --config webpack.config.js --mode development",
        "format": "tsfmt -r && scssfmt --recursive sass/**/*.scss && tslint -c tslint.json --project .",
        "clean": "rimraf dist app",
        "dist": "tauri build"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.13.1",
        "@tauri-apps/cli": "^1.0.0-beta.5",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/mousetrap": "^1.6.3",
        "@types/qrcode.react": "^1.0.2",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@webpack-cli/serve": "^1.0.1",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^5.0.0",
        "extract-loader": "^5.1.0",
        "file-loader": "^6.0.0",
        "mini-css-extract-plugin": "^2.1.0",
        "neon-cli": "^0.8.3",
        "sass": "^1.35.2",
        "sass-bem": "^2.6.5",
        "sass-loader": "^12.1.0",
        "scssfmt": "^1.0.7",
        "ts-loader": "^9.2.3",
        "tslint": "^6.1.2",
        "typescript": "^4.0.3",
        "typescript-formatter": "^7.2.2",
        "webpack": "^5.44.0",
        "webpack-cli": "^4.0.0",
        "webpack-dev-server": "^3.11.0",
        "write-file-webpack-plugin": "^4.5.0"
    },
    "dependencies": {
        "@blueprintjs/core": "^3.35.0",
        "@blueprintjs/icons": "^3.22.0",
        "@blueprintjs/select": "^3.14.3",
        "@xstate/react": "^1.5.1",
        "@emotion/css": "^11.1.3",
        "@tauri-apps/api": "^1.0.0-beta.4",
        "decko": "^1.2.0",
        "moment": "^2.27.0",
        "process": "^0.11.10",
        "qrcode.react": "^1.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "xstate": "^4.22.0"
    },
    "build": {
        "win": {
            "icon": "resources/t-rust-less.png",
            "asar": true,
            "asarUnpack": [
                "*.node",
                "*.dll"
            ],
            "publisherName": "t-rust-less"
        },
        "linux": {},
        "nsis": {
            "artifactName": "t-rust-less-ui-setup.exe"
        },
        "appImage": {
            "artifactName": "t-rust-less-ui.AppImage"
        }
    }
}
